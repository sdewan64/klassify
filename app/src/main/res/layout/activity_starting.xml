<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faff4b"
    >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#faff4b" >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/menu_hello"
                android:id="@+id/starting_textview_helloText"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#6E68AF"/>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:id="@+id/starting_imagebutton_postad"
                android:contentDescription="@string/image_description_postnewad"
                android:layout_gravity="center"
                android:background="@drawable/post_ad"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"/>



            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="130dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal|top"
                android:background="@drawable/klassify_logo"/>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/menu_text_editorsChoice"
                android:layout_gravity="center"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/starting_horizontalscrollview"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp" >
                </HorizontalScrollView>
        </LinearLayout>


    </FrameLayout>


    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_orange_dark"
        android:divider="@android:color/white"
        android:dividerHeight="0dp"
        android:background="@android:color/holo_green_light"
        />


</android.support.v4.widget.DrawerLayout>

